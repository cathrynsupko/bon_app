<h1><%= @user.email%></h1>
<%= pluralize( @user.followers.count, "follower") %>

<% if current_user.followers.include? @user %>
  <%= button_to "Unfollow", {controller:"followings", action:"destroy", user_id: @user.id }, method: :delete %>
<% else %>
  <%= button_to "Follow", { controller: "followings", action:"create", user_id: @user.id }%>
<% end %>


